module count4_b1_b2(rst, clk, count, init, b1[3..0], b2[3..0] : c[3..0])
	X = init*/count
   Y0 = c[0]*b2[0] + /c[0]*/b2[0]
   Y1 = c[1]*b2[1] + /c[1]*/b2[1]
   Y2 = c[2]*b2[2] + /c[2]*/b2[2]
   Y3 = c[3]*b2[3] + /c[3]*/b2[3]
   Y = Y0*Y1*Y2*Y3
   count_init4(rst, clk, X, en, b1[3..0] : c[3..0])
   en= /init*count*/Y + X
end module
