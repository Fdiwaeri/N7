# ---- 1. Cohérence des états ----
[] -( (Conception_ready /\ Conception_running)
    \/ (Conception_running /\ Conception_finished)
    \/ (Conception_ready /\ Conception_finished) );

[] -( (RedactionDoc_ready /\ RedactionDoc_running)
    \/ (RedactionDoc_running /\ RedactionDoc_finished)
    \/ (RedactionDoc_ready /\ RedactionDoc_finished) );

[] -( (Programmation_ready /\ Programmation_running)
    \/ (Programmation_running /\ Programmation_finished)
    \/ (Programmation_ready /\ Programmation_finished) );

[] -( (RedactionTests_ready /\ RedactionTests_running)
    \/ (RedactionTests_running /\ RedactionTests_finished)
    \/ (RedactionTests_ready /\ RedactionTests_finished) );

# ---- 2. Une activité terminée n’évolue plus ----
[] (Conception_finished => [] -(Conception_start \/ Conception_finish) );
[] (RedactionDoc_finished => [] -(RedactionDoc_start \/ RedactionDoc_finish) );
[] (Programmation_finished => [] -(Programmation_start \/ Programmation_finish) );
[] (RedactionTests_finished => [] -(RedactionTests_start \/ RedactionTests_finish) );
